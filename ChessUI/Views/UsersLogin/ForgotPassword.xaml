<Window
    x:Class="ChessUI.Views.UsersLogin.ForgotPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ForgotPassword"
    Width="500"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="15"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Border
        Background="#1E1E1E"
        BorderBrush="White"
        BorderThickness="1.5"
        CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="TitleText"
                Margin="0"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="Forgot password" />
            <Separator
                Grid.Row="0"
                Height="10"
                Margin="0,35,0,0"
                Background="White" />
            <StackPanel
                x:Name="Step1_Email"
                Grid.Row="1"
                VerticalAlignment="Center"
                Visibility="Visible">
                <TextBox
                    x:Name="TxtEmail"
                    Height="50"
                    Padding="10,12,10,10"
                    BorderBrush="White"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Tag="Enter your email" />
            </StackPanel>

            <StackPanel
                x:Name="Step2_Otp"
                Grid.Row="1"
                VerticalAlignment="Center"
                Visibility="Collapsed">
                <TextBox
                    x:Name="TxtOtp"
                    Height="50"
                    Padding="10,12,10,10"
                    HorizontalContentAlignment="Center"
                    BorderBrush="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Tag="Enter the OTP verification code" />
            </StackPanel>

            <StackPanel
                x:Name="Step3_NewPass"
                Grid.Row="1"
                VerticalAlignment="Center"
                Visibility="Collapsed">
                <TextBlock
                    Margin="0,5,0,5"
                    FontSize="12"
                    Foreground="White"
                    Text="Enter new password:" />
                <PasswordBox
                    x:Name="PwdNew"
                    Height="28"
                    Padding="5"
                    FontSize="12" />

                <TextBlock
                    Margin="0,5,0,5"
                    FontSize="12"
                    Foreground="White"
                    Text="Confirm password:" />
                <PasswordBox
                    x:Name="PwdConfirm"
                    Height="28"
                    Padding="5"
                    FontSize="12" />
            </StackPanel>

            <TextBlock
                x:Name="TxtError"
                Grid.Row="1"
                Margin="0,5,0,0"
                VerticalAlignment="Bottom"
                Foreground="#FF5252"
                TextWrapping="Wrap" />

            <StackPanel
                Grid.Row="2"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="Transparent"
                    BorderBrush="White"
                    Click="BtnCancel_Click"
                    Content="Cancel"
                    Foreground="White"
                    Style="{StaticResource ButtonBorderRadius}" />
                <Button
                    x:Name="BtnMain"
                    Width="100"
                    Height="40"
                    Background="White"
                    Click="BtnMain_Click"
                    Content="Send code"
                    Foreground="Black"
                    Style="{StaticResource ButtonBorderRadius}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>