<UserControl
    x:Class="ChessUI.Views.BoardMenu.InfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI.Views.BoardMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid Margin="0,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="10"
            Background="{StaticResource FrostedGlassBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Name User + time" />
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="5"
                        Content="Offer Draw"
                        Style="{StaticResource NeutralButton}" />
                    <Button
                        Margin="5"
                        Content="Resign"
                        Style="{StaticResource RegisterButton}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Padding="10"
            Background="{StaticResource FrostedGlassBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button Content="&#xE892;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE76B;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE768;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE76C;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE893;" Style="{StaticResource MoveNavButton}" />
                </StackPanel>

                <ListView
                    x:Name="lvMovementInfo"
                    Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    ItemContainerStyle="{StaticResource MoveListViewItemStyle}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    HorizontalAlignment="Center">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource MoveHeaderStyle}">
                            <GridViewColumn Width="50" Header="Move" DisplayMemberBinding="{Binding Move}"/>
                            <GridViewColumn Width="100" Header="White" DisplayMemberBinding="{Binding White}"/>
                            <GridViewColumn Width="100" Header="Black" DisplayMemberBinding="{Binding Black}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>