<UserControl
    x:Class="ChessUI.Views.BoardMenu.ComputerPlaySetup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="0,20,20,20"
    d:DesignHeight="600"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="10"
            Background="{StaticResource FrostedGlassBrush}"
            CornerRadius="8">
            <StackPanel VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        Source="/Assets/MenuAssets/play_computer.png" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Play With Computer" />
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Padding="10"
            Background="{StaticResource FrostedGlassBrush}"
            CornerRadius="8">
            <StackPanel Margin="0,10,0,0">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="White"
                    Text="Pick your rival" />

                <Border
                    Height="250"
                    Margin="0,0,0,20"
                    Padding="10"
                    Background="#333333"
                    CornerRadius="5">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="10,0,0,0"
                                FontSize="14"
                                Foreground="#AAA"
                                Text="5 LEVELS" />
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <RadioButton
                                Grid.Row="0"
                                Grid.Column="0"
                                GroupName="BotSelection"
                                Style="{StaticResource BotTileStyle}">
                                <Image Source="/Assets/MenuAssets/admin_avartar.png" Stretch="UniformToFill" />
                                <RadioButton.ToolTip>
                                    <ToolTip
                                        HasDropShadow="false"
                                        HorizontalOffset="10"
                                        Placement="Right"
                                        PlacementRectangle="50,0,0,0"
                                        VerticalOffset="20">
                                        <BulletDecorator>
                                            <BulletDecorator.Bullet>
                                                <Ellipse
                                                    Width="20"
                                                    Height="10"
                                                    Fill="Blue" />
                                            </BulletDecorator.Bullet>
                                            <TextBlock>Uses the ToolTip Class</TextBlock>
                                        </BulletDecorator>
                                    </ToolTip>
                                </RadioButton.ToolTip>
                            </RadioButton>
                            <RadioButton
                                Grid.Row="0"
                                Grid.Column="1"
                                GroupName="BotSelection"
                                Style="{StaticResource BotTileStyle}">
                                <RadioButton.ToolTip>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Lê Quang Liêm Bot" />
                                        <TextBlock Foreground="#AAAAAA" Text="Elo: 1800 (Trung bình)" />
                                    </StackPanel>
                                </RadioButton.ToolTip>
                                <Image Source="/Assets/MenuAssets/LeQuangLiem_avartar.jpeg" Stretch="UniformToFill" />
                            </RadioButton>

                            <RadioButton
                                Grid.Row="0"
                                Grid.Column="2"
                                GroupName="BotSelection"
                                Style="{StaticResource BotTileStyle}">
                                <RadioButton.ToolTip>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Hikaru Bot" />
                                        <TextBlock Foreground="#AAAAAA" Text="Elo: 1400 (Dễ)" />
                                    </StackPanel>
                                </RadioButton.ToolTip>
                                <Image Source="/Assets/MenuAssets/Hikaru_Nakamura_avartar.jpeg" Stretch="UniformToFill" />
                            </RadioButton>

                            <RadioButton
                                Grid.Row="1"
                                Grid.Column="0"
                                GroupName="BotSelection"
                                Style="{StaticResource BotTileStyle}">
                                <RadioButton.ToolTip>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Garry Bot" />
                                        <TextBlock Foreground="#AAAAAA" Text="Elo: 2500 (Rất Mạnh)" />
                                    </StackPanel>
                                </RadioButton.ToolTip>
                                <Image Source="/Assets/MenuAssets/Garry_Kasparov_avartar.jpeg" Stretch="UniformToFill" />
                            </RadioButton>

                            <RadioButton
                                Grid.Row="1"
                                Grid.Column="1"
                                GroupName="BotSelection"
                                Style="{StaticResource BotTileStyle}">
                                <RadioButton.ToolTip>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Magnus Bot" />
                                        <TextBlock Foreground="#AAAAAA" Text="Elo: 2000 (Khó)" />
                                    </StackPanel>
                                </RadioButton.ToolTip>
                                <Image Source="/Assets/MenuAssets/Magnus_Carlsen_avartar.jpeg" Stretch="UniformToFill" />
                            </RadioButton>
                        </Grid>
                    </Grid>
                </Border>

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="White"
                    Text="Who first ?" />

                <StackPanel
                    Margin="0,0,0,30"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <RadioButton
                        Margin="0,0,5,0"
                        Padding="10,5"
                        Content="Trắng"
                        GroupName="ColorChoice"
                        IsChecked="True"
                        Style="{StaticResource FlyoutButton}" />
                    <RadioButton
                        Margin="5,0"
                        Padding="10,5"
                        Content="Đen"
                        GroupName="ColorChoice"
                        Style="{StaticResource FlyoutButton}" />
                    <RadioButton
                        Margin="5,0,0,0"
                        Padding="10,5"
                        Content="Ngẫu nhiên"
                        GroupName="ColorChoice"
                        Style="{StaticResource FlyoutButton}" />
                </StackPanel>

                <Button
                    x:Name="StartGameButton"
                    Padding="15,8"
                    Content="BẮT ĐẦU TRẬN ĐẤU"
                    FontSize="16"
                    Style="{StaticResource RegisterButton}" />

            </StackPanel>
        </Border>
    </Grid>
</UserControl>