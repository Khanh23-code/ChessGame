<UserControl
    x:Class="ChessUI.Views.BoardMenu.InfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI.Views.BoardMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="500"
    mc:Ignorable="d">

    <Grid Margin="0,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="10"
            Background="{DynamicResource Brush.Glass}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="{DynamicResource Brush.Text.Primary}"
                    Text="Name User + time" />
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="ButtonOfferDraw"
                        Margin="5"
                        Click="ButtonOfferDraw_Click"
                        Content="Offer Draw"
                        Style="{StaticResource NeutralButton}" />
                    <Button
                        x:Name="ButtonResign"
                        Margin="5"
                        Click="ButtonResign_Click"
                        Content="Resign"
                        Style="{StaticResource RegisterButton}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Padding="10"
            Background="{DynamicResource Brush.Glass}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button Content="&#xE892;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE76B;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE768;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE76C;" Style="{StaticResource MoveNavButton}" />
                    <Button Content="&#xE893;" Style="{StaticResource MoveNavButton}" />
                </StackPanel>

                <ListView
                    x:Name="lvMovementInfo"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="{DynamicResource Brush.Text.Primary}"
                    ItemContainerStyle="{StaticResource MoveListViewItemStyle}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource MoveHeaderStyle}">
                            <GridViewColumn Width="50" Header="Move">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Width="40"
                                            HorizontalAlignment="Center"
                                            Foreground="{DynamicResource Brush.Text.Secondary}"
                                            Text="{Binding Move}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="115" Header="White">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Width="105"
                                            HorizontalAlignment="Center"
                                            Text="{Binding White}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="115" Header="Black">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Width="105"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Black}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>