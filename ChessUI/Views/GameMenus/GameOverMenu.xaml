<UserControl
    x:Class="ChessUI.GameOverMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="400"
    Style="{StaticResource MenuAnimationStyle}"
    mc:Ignorable="d">

    <Border
        Width="350"
        Height="220"
        Style="{StaticResource MenuOuterBorderStyle}">
        <Border Style="{StaticResource MenuInnerBorderStyle}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    x:Name="txtWinner"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="{StaticResource Brush.Gradient.Play}"
                    Text="Winner text" />

                <TextBlock
                    x:Name="txtReason"
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="14"
                    Foreground="{DynamicResource Brush.Text.Secondary}"
                    Text="Endreason + Who win" />

                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnExit"
                        Width="100"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="btnExit_Click"
                        Content="EXIT"
                        Style="{StaticResource GameMenuGrayButtonStyle}" />

                    <Button
                        x:Name="btnRestart"
                        Width="100"
                        Height="40"
                        Click="btnRestart_Click"
                        Content="RESTART"
                        Style="{StaticResource RestartGradientButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>