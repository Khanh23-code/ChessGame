<UserControl
    x:Class="ChessUI.Views.BoardMenu.PuzzleFlyoutMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        Width="300"
        Background="#2C2B29"
        BorderBrush="#404040"
        BorderThickness="0,0,1,0"
        RenderOptions.BitmapScalingMode="HighQuality">
        <StackPanel Margin="15">
            <Grid Margin="5,5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="IconColumn" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Width="28"
                    Height="28"
                    Margin="0,0,10,0"
                    Source="/Assets/MenuAssets/puzzle.png" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Puzzle" />
            </Grid>
            <RadioButton GroupName="PuzzleSubMenu" 
                         Style="{StaticResource FlyoutButton}"
                         Click="NormalPuzzle_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/puzzles.png" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Puzzles" />
                    </StackPanel>
                </Grid>
            </RadioButton>

            <RadioButton
                Margin="0,10,0,0"
                GroupName="PuzzleSubMenu"
                Style="{StaticResource FlyoutButton}"
                Click="DailyPuzzle_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/puzzle_daily.png" />

                    <Border Grid.Column="0" 
                            Width="16" Height="16" 
                            Background="#00DC82" 
                            CornerRadius="8" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" 
                            Margin="0,-4,10,0"
                            BorderBrush="#2C2B29"
                            BorderThickness="2">
                        <TextBlock Text="&#xE73E;" 
                                   FontFamily="Segoe Fluent Icons" 
                                   FontSize="8" 
                                   Foreground="#11191F" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Daily Puzzle" />

                        <TextBlock 
                                Text="Dec 20" 
                                FontSize="12" 
                                Foreground="#888888" 
                                Margin="0,2,0,0"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </RadioButton>
        </StackPanel>
    </Border>
</UserControl>
