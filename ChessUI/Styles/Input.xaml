<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  style border blur in LoginWindow  -->
    <Style x:Key="BorderStyleLogin" TargetType="Border">
        <Setter Property="Effect">
            <Setter.Value>
                <BlurEffect KernelType="Gaussian" Radius="10" />
            </Setter.Value>
        </Setter>
    </Style>
    <!--  style information textbox in Login  -->
    <Style TargetType="TextBox">
        <Setter Property="Height" Value="25" />
        <Setter Property="Padding" Value="5,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border.Light}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="Margin" Value="0,0,0,15" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="CaretBrush" Value="White" />
    </Style>
    <!--  style password textbox in Login  -->
    <Style TargetType="PasswordBox">
        <Setter Property="Height" Value="25" />
        <Setter Property="Padding" Value="5,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border.Light}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="Margin" Value="0,0,0,15" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="CaretBrush" Value="White" />
    </Style>
    <!--  style comboboxItem in SignUpWindow  -->
    <Style x:Key="ComboBoxItemDarkStyle" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="5" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Interact.Hover}" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#555555" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--  style Combobox like textbox in SignUpWindow  -->
    <Style TargetType="ComboBox">
        <Setter Property="Height" Value="36" />
        <Setter Property="Padding" Value="5,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border.Light}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="Margin" Value="0,0,0,15" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource ComboBoxItemDarkStyle}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Border
                        x:Name="MainBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{DynamicResource Brush.Text.Primary}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="PART_EditableTextBox"
                                Padding="5,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="{DynamicResource Brush.Text.Inverted}"
                                Foreground="{DynamicResource Brush.Text.Primary}"
                                Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <ToggleButton
                                x:Name="PART_DropDownToggle"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource Brush.Text.Primary}"
                                IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe Fluent Icons"
                                                FontSize="12"
                                                Foreground="{DynamicResource Brush.Text.Primary}"
                                                Text="&#xE96E;" />
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                Placement="Bottom">
                                <Border
                                    MaxHeight="200"
                                    Background="{DynamicResource Brush.Container.Background}"
                                    BorderBrush="{DynamicResource Brush.Container.Border}"
                                    BorderThickness="1">
                                    <ScrollViewer>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="False">
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#80FFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  ToogleButton for switch light or dark theme  -->
    <Style x:Key="ImageThemeToggleStyle" TargetType="CheckBox">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="60" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border
                            x:Name="Track"
                            BorderThickness="0"
                            CornerRadius="15">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0.0" Color="#2d5076" />
                                    <GradientStop Offset="0.5" Color="#4b4470" />
                                    <GradientStop Offset="1.0" Color="#FF4A2652" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border
                                BorderBrush="#20000000"
                                BorderThickness="1"
                                CornerRadius="15" />
                        </Border>

                        <Border
                            x:Name="Thumb"
                            Width="26"
                            Height="26"
                            Margin="2,0,0,0"
                            HorizontalAlignment="Left"
                            CornerRadius="13">
                            <Border.Background>
                                <SolidColorBrush Color="#362c4f" />
                            </Border.Background>

                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="4"
                                    Direction="270"
                                    Opacity="0.4"
                                    ShadowDepth="1" />
                            </Border.Effect>

                            <Grid>
                                <Image
                                    x:Name="MoonImage"
                                    Width="16"
                                    Height="16"
                                    Opacity="1"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    RenderTransformOrigin="0.5,0.5"
                                    Source="/Assets/MenuAssets/night.png"
                                    Stretch="Uniform">
                                    <Image.RenderTransform>
                                        <RotateTransform Angle="0" />
                                    </Image.RenderTransform>
                                </Image>

                                <Image
                                    x:Name="SunImage"
                                    Width="18"
                                    Height="18"
                                    Opacity="0"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    RenderTransformOrigin="0.5,0.5"
                                    Source="/Assets/MenuAssets/sun.png"
                                    Stretch="Uniform">
                                    <Image.RenderTransform>
                                        <RotateTransform Angle="-45" />
                                    </Image.RenderTransform>
                                </Image>

                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Resources>

                        <Storyboard x:Key="AnimateToLight">
                            <ThicknessAnimation
                                Storyboard.TargetName="Thumb"
                                Storyboard.TargetProperty="Margin"
                                To="32,0,0,0"
                                Duration="0:0:0.4">
                                <ThicknessAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </ThicknessAnimation.EasingFunction>
                            </ThicknessAnimation>

                            <ColorAnimation
                                Storyboard.TargetName="Thumb"
                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                To="White"
                                Duration="0:0:0.4" />

                            <DoubleAnimation
                                Storyboard.TargetName="SunImage"
                                Storyboard.TargetProperty="Opacity"
                                To="1"
                                Duration="0:0:0.3" />
                            <DoubleAnimation
                                Storyboard.TargetName="SunImage"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                To="0"
                                Duration="0:0:0.4" />

                            <DoubleAnimation
                                Storyboard.TargetName="MoonImage"
                                Storyboard.TargetProperty="Opacity"
                                To="0"
                                Duration="0:0:0.3" />
                            <DoubleAnimation
                                Storyboard.TargetName="MoonImage"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                To="-45"
                                Duration="0:0:0.4" />

                            <ColorAnimation
                                Storyboard.TargetName="Track"
                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].Color"
                                To="#FFC4E0FF"
                                Duration="0:0:0.4" />
                            <ColorAnimation
                                Storyboard.TargetName="Track"
                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].Color"
                                To="#FFE6E1FF"
                                Duration="0:0:0.4" />
                            <ColorAnimation
                                Storyboard.TargetName="Track"
                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].Color"
                                To="#FFFFD1F4"
                                Duration="0:0:0.4" />
                        </Storyboard>

                        <Storyboard x:Key="AnimateToDark">
                            <ThicknessAnimation
                                Storyboard.TargetName="Thumb"
                                Storyboard.TargetProperty="Margin"
                                To="2,0,0,0"
                                Duration="0:0:0.4">
                                <ThicknessAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </ThicknessAnimation.EasingFunction>
                            </ThicknessAnimation>

                            <ColorAnimation
                                Storyboard.TargetName="Thumb"
                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                To="#362c4f"
                                Duration="0:0:0.4" />

                            <DoubleAnimation
                                Storyboard.TargetName="SunImage"
                                Storyboard.TargetProperty="Opacity"
                                To="0"
                                Duration="0:0:0.3" />
                            <DoubleAnimation
                                Storyboard.TargetName="SunImage"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                To="90"
                                Duration="0:0:0.4" />

                            <DoubleAnimation
                                Storyboard.TargetName="MoonImage"
                                Storyboard.TargetProperty="Opacity"
                                To="1"
                                Duration="0:0:0.3" />
                            <DoubleAnimation
                                Storyboard.TargetName="MoonImage"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                To="0"
                                Duration="0:0:0.4" />

                            <ColorAnimation
                                Storyboard.TargetName="Track"
                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].Color"
                                To="#2d5076"
                                Duration="0:0:0.4" />
                            <ColorAnimation
                                Storyboard.TargetName="Track"
                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].Color"
                                To="#4b4470"
                                Duration="0:0:0.4" />
                            <ColorAnimation
                                Storyboard.TargetName="Track"
                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].Color"
                                To="#FF4A2652"
                                Duration="0:0:0.4" />
                        </Storyboard>
                    </ControlTemplate.Resources>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource AnimateToLight}" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource AnimateToDark}" />
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>