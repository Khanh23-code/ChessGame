<Window
    x:Class="ChessUI.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="760"
    Height="520"
    AllowsTransparency="False"
    Background="Transparent"
    Icon="/Assets/icon.ico"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    StateChanged="Window_StateChanged"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="30"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetName="MainGrid"
                        Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="0:0:0.8" />

                    <DoubleAnimation
                        Storyboard.TargetName="MainGrid"
                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="500"
                        To="0"
                        Duration="0:0:0.8">

                        <DoubleAnimation.EasingFunction>
                            <PowerEase EasingMode="EaseOut" Power="4" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="MainGrid" RenderOptions.BitmapScalingMode="HighQuality">
        <Grid.RenderTransform>
            <TranslateTransform X="0" Y="0" />
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="485*" />
            <ColumnDefinition Width="285*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            Panel.ZIndex="1"
            Orientation="Horizontal">
            <Button
                x:Name="btnMinimize"
                Click="btnMinimize_Click"
                Content="&#xE921;"
                Style="{StaticResource TitleBarButton}" />
            <Button
                x:Name="btnMaximize"
                Click="btnMaximize_Click"
                Content="&#xE922;"
                Style="{StaticResource TitleBarButton}" />
            <Button
                x:Name="btnClose"
                Click="btnClose_Click"
                Content="&#xE8BB;"
                Style="{StaticResource TitleBarButtonClose}" />
        </StackPanel>
        <Image
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Source="/Assets/LoginAssets/BackgroundMenu.jpeg"
            Stretch="UniformToFill" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,10,10"
            Background="#A0000000"
            CornerRadius="10"
            Style="{StaticResource BorderStyleLogin}" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,15,15,15"
            Background="Transparent"
            BorderBrush="#30FFFFFF"
            BorderThickness="1"
            CornerRadius="10">

            <StackPanel Margin="25" VerticalAlignment="Center">

                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="SIGN IN" />

                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Email" />
                <TextBox
                    x:Name="EmailTextBox"
                    Height="25"
                    KeyDown="EmailTextBox_KeyDown" />
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Password" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="PasswordShowBox"
                        Height="25"
                        Visibility="Collapsed" />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Height="25"
                        KeyDown="PasswordBox_KeyDown" />
                    <Button
                        x:Name="eye"
                        Grid.ColumnSpan="1"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="👁️"
                        Foreground="White"
                        PreviewMouseLeftButtonDown="EyeButton_Show"
                        PreviewMouseLeftButtonUp="EyeButton_Hide"
                        Style="{StaticResource EyeButton}" />
                </Grid>
                <TextBlock
                    x:Name="ErrorText"
                    Margin="0,2,0,5"
                    FontSize="12"
                    Foreground="#FF5252"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        x:Name="RememberMeCheckBox"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Remember me"
                        Foreground="White" />

                    <Button
                        x:Name="ForgotPasswordButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ForgotPasswordButton_Click"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{StaticResource EyeButton}">
                        <TextBlock Text="Forgot Password?" TextDecorations="Underline" />
                    </Button>
                </Grid>

                <Button
                    x:Name="LoginButton"
                    Height="40"
                    Margin="0,0,0,15"
                    Background="White"
                    BorderThickness="0"
                    Click="LoginButton_Click"
                    Content="Login"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="#333333"
                    Style="{StaticResource ButtonBorderRadius}" />

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Don't have an accounts? " />
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink Click="SignUp_Click">
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#00BFFF" />

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#00BFFF" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#00BFFF" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                            Sign up
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>