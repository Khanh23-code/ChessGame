<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Brush.Background.Main" Color="#FDFBF7" />

    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="#FFFefc" />
    <SolidColorBrush x:Key="Brush.Background.Tertiary" Color="#F2EFE9" />
    <SolidColorBrush x:Key="Brush.Glass" Color="#DDFDFBF7" />

    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#2D2420" />
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#6E645F" />
    <SolidColorBrush x:Key="Brush.Text.Accent" Color="#B85C38" />

    <SolidColorBrush x:Key="Brush.Border.Light" Color="#E6E0D6" />
    <SolidColorBrush x:Key="Brush.Input.Background" Color="#FFFFFF" />

    <LinearGradientBrush x:Key="Brush.Gradient.Play" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0.0" Color="#FF7E5F" />
        <GradientStop Offset="1.0" Color="#FEB47B" />
    </LinearGradientBrush>
</ResourceDictionary>