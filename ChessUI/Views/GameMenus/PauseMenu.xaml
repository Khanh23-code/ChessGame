<UserControl
    x:Class="ChessUI.PauseMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="350"
    Style="{StaticResource MenuAnimationStyle}"
    mc:Ignorable="d">

    <Border
        Width="300"
        Height="160"
        Style="{StaticResource MenuOuterBorderStyle}">
        <Border Style="{StaticResource MenuInnerBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource Brush.Text.Primary}"
                    Text="GAME PAUSED" />

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnContinue"
                        Width="100"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="btnContinue_Click"
                        Content="CONTINUE"
                        Style="{DynamicResource GameMenuGrayButtonStyle}" />

                    <Button
                        x:Name="btnRestart"
                        Width="100"
                        Height="40"
                        Click="btnRestart_Click"
                        Content="RESTART"
                        Style="{StaticResource RestartGradientButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>