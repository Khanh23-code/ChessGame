<Window
    x:Class="ChessUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChessGame"
    Width="1930"
    Height="1080"
    Background="#302E2C"
    Icon="/Assets/icon.ico"
    KeyDown="Window_KeyDown"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid RenderOptions.BitmapScalingMode="HighQuality">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Width="80"
            Background="#262522">
            <Button
                Height="60"
                Margin="10"
                Content="Play"
                Foreground="Black"
                Style="{StaticResource ButtonBorderRadius}" />
            <Button
                Height="60"
                Margin="10"
                Content="Puzzles"
                Foreground="White"
                Style="{StaticResource ButtonBorderRadius}" />
            <Button
                Height="60"
                Margin="10"
                Content="Learn"
                Foreground="White"
                Style="{StaticResource ButtonBorderRadius}" />
        </StackPanel>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="0,0,0,10"
                Padding="10"
                Background="#262522"
                CornerRadius="5">
                <TextBlock
                    FontSize="18"
                    Foreground="White"
                    Text="Opponent Player Info (e.g., Simon Giri)" />
            </Border>

            <Viewbox Grid.Row="1">
                <Grid
                    x:Name="BoardGrid"
                    Width="600"
                    Height="600"
                    MouseDown="BoardGrid_MouseDown">

                    <Grid.Background>
                        <ImageBrush ImageSource="/Assets/BoardAsssets/Board.png" />
                    </Grid.Background>

                    <UniformGrid
                        x:Name="HighLightGrid"
                        Columns="8"
                        Rows="8" />

                    <UniformGrid
                        x:Name="PieceGrid"
                        Columns="8"
                        Rows="8" />

                    <ContentControl x:Name="MenuContainer" />
                </Grid>
            </Viewbox>

            <Border
                Grid.Row="2"
                Margin="0,10,0,0"
                Padding="10"
                Background="#262522"
                CornerRadius="5">
                <TextBlock
                    FontSize="18"
                    Foreground="White"
                    Text="Your Player Info (e.g., Joshua Carlson)" />
            </Border>
        </Grid>

        <Grid Grid.Column="2" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="10"
                Background="#262522"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        Foreground="White"
                        Text="Rated Blitz • 3 min" />
                    <StackPanel
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button Margin="5" Content="Offer Draw" />
                        <Button Margin="5" Content="Resign" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border
                Grid.Row="1"
                Margin="0,10"
                Padding="10"
                Background="#262522"
                CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Foreground="White" Text="Move list will go here..." />
                </ScrollViewer>
            </Border>

            <Border
                Grid.Row="2"
                Padding="10"
                Background="#262522"
                CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Foreground="White"
                        Text="Chat history..." />
                    <TextBox
                        Grid.Row="1"
                        Margin="0,5,0,0"
                        Text="Type with opponent..." />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
