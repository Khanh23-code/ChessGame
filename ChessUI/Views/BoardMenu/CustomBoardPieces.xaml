<Window
    x:Class="ChessUI.Views.BoardMenu.CustomBoardPieces"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style x:Key="ThemeItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,10,15" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <Border
                                Name="Border"
                                Width="100"
                                Height="100"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="3"
                                CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            </Border>

                            <Border
                                x:Name="HoverBorder"
                                Width="100"
                                Height="100"
                                BorderBrush="{DynamicResource Brush.Text.Secondary}"
                                BorderThickness="2"
                                CornerRadius="8"
                                IsHitTestVisible="False"
                                Opacity="0" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PlayGradientBrush}" />
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Brush.Interact.Selected}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverBorder" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="120" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Background="{DynamicResource Brush.Background.Tertiary}"
        BorderBrush="{DynamicResource Brush.Text.Primary}"
        BorderThickness="2"
        ClipToBounds="True"
        CornerRadius="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="30,30,10,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="{DynamicResource Brush.Text.Primary}"
                    Text="Board and Pieces" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,5,0,20"
                    FontSize="14"
                    Foreground="{DynamicResource Brush.Text.Secondary}"
                    Text="Choose style for board và pieces."
                    TextWrapping="Wrap" />
                <ListBox
                    x:Name="ThemeList"
                    Grid.Row="2"
                    Margin="0,0,0,10"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemContainerStyle="{StaticResource ThemeItemStyle}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    SelectionChanged="ThemeList_SelectionChanged">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Width="90"
                                Height="90"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                                <Border
                                    BorderBrush="{DynamicResource Brush.Gradient.Play}"
                                    BorderThickness="1"
                                    ClipToBounds="True"
                                    CornerRadius="6">
                                    <Image
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Source="{Binding BoardIconPath}"
                                        Stretch="UniformToFill" />
                                </Border>

                                <Image
                                    Width="50"
                                    Height="50"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{Binding PiecePreviewPath}">
                                    <Image.Effect>
                                        <DropShadowEffect
                                            BlurRadius="5"
                                            Direction="270"
                                            Opacity="0.5"
                                            ShadowDepth="2" />
                                    </Image.Effect>
                                </Image>

                                <Border
                                    Width="22"
                                    Height="22"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="{DynamicResource Brush.Gradient.Play}"
                                    BorderThickness="0.75"
                                    CornerRadius="11"
                                    Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Path
                                        Margin="0,0,3,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 6,11 L 10,15 L 16,7"
                                        Stroke="{DynamicResource Brush.Gradient.Play}"
                                        StrokeThickness="3" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">

                    <Button
                        Margin="0,0,15,0"
                        Background="#3A3937"
                        Click="BtnCancel_Click"
                        Content="Hủy bỏ"
                        Foreground="#AAAAAA"
                        Style="{StaticResource DialogButton}" />

                    <Button
                        Width="120"
                        Height="40"
                        Background="{DynamicResource PlayGradientBrush}"
                        Click="BtnSave_Click"
                        Content="Lưu"
                        Foreground="{DynamicResource Brush.Text.Primary}"
                        Style="{DynamicResource StartButtonStyle}" />
                </StackPanel>
            </Grid>
            <Border
                Grid.Column="1"
                Background="{DynamicResource Brush.Background.Main}"
                ClipToBounds="True"
                CornerRadius="0,12,12,0">
                <Grid>
                    <Viewbox Margin="40">
                        <Grid Width="600" Height="600">
                            <Border
                                BorderBrush="{DynamicResource Br}"
                                BorderThickness="10"
                                CornerRadius="4">
                                <Grid>
                                    <Image x:Name="PreviewBoardImage" Stretch="Fill" />

                                    <Grid x:Name="PreviewPiecesGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Viewbox>

                    <Border
                        Width="2"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource Brush.Text.Primary}"
                        Opacity="0.5" />
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>