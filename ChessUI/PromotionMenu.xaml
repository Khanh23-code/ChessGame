<UserControl x:Class="ChessUI.PromotionMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
        Width="275"
        Height="125"
        Style="{StaticResource BorderStyle}">

        <!-- RenderOptions.BitmapScalingMode là chế độ để hiển thị hình ảnh -->
        <Grid RenderOptions.BitmapScalingMode="HighQuality">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>

            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>-->

            <TextBlock Grid.Row="0"
                       Grid.ColumnSpan="4"
                       Text="SELECT A PIECE"
                       Style="{StaticResource TextStyle}"
                       FontSize="28"
                       />

            <UniformGrid Grid.Row="1"
                         Rows="1"
                         Columns="4"
                         Cursor="Hand">
                <Image x:Name="imgQueen" MouseDown="imgQueen_MouseDown"/>
                <Image x:Name="imgRook" MouseDown="imgRook_MouseDown"/>
                <Image x:Name="imgKnight" MouseDown="imgKnight_MouseDown"/>
                <Image x:Name="imgBishop" MouseDown="imgBishop_MouseDown"/>
            </UniformGrid>

            <!--<Image Grid.Row="1" Source="/Assets/BishopB.png" Grid.Column="0" x:Name="imgQueen"/>
            <Image Grid.Row="1" Grid.Column="1" x:Name="imgRook"/>
            <Image Grid.Row="1" Grid.Column="2" x:Name="imgKnight"/>
            <Image Grid.Row="1" Grid.Column="3" x:Name="imgBishop"/>-->
        </Grid>
            
    </Border>
    
</UserControl>
