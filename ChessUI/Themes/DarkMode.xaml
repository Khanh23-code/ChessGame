<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Brush.Background.Main" Color="#202020" />
    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="#252525" />
    <SolidColorBrush x:Key="Brush.Background.Tertiary" Color="#353535" />

    <SolidColorBrush x:Key="Brush.Container.Background" Color="#333333" />
    <SolidColorBrush x:Key="Brush.Container.Border" Color="#555555" />

    <SolidColorBrush x:Key="Brush.Glass" Color="#CC1c1c1c" />
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#AAAAAA" />
    <SolidColorBrush x:Key="Brush.Text.Accent" Color="#00DC82" />
    <SolidColorBrush x:Key="Brush.Text.Inverted" Color="#FFFFFF" />

    <SolidColorBrush x:Key="Brush.Border.Light" Color="#444444" />
    <SolidColorBrush x:Key="Brush.Input.Background" Color="#333333" />

    <LinearGradientBrush x:Key="Brush.Gradient.Play" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0.0" Color="#FFA274" />
        <GradientStop Offset="1.0" Color="#a355d0" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="Brush.Interact.Hover" Color="#15FFFFFF" />
    <SolidColorBrush x:Key="Brush.Interact.Pressed" Color="#25FFFFFF" />
    <SolidColorBrush x:Key="Brush.Interact.Selected" Color="#40FFFFFF" />
</ResourceDictionary>