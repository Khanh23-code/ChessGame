<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Brush.Background.Main" Color="#F5F5F7" />

    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="Brush.Background.Tertiary" Color="#EAEAEA" />

    <SolidColorBrush x:Key="Brush.Container.Background" Color="#FFFFFF" />
    <SolidColorBrush x:Key="Brush.Container.Border" Color="#D1D1D1" />

    <SolidColorBrush x:Key="Brush.Glass" Color="#CCF5F5F7" />

    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#1D1D1F" />
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#86868B" />
    <SolidColorBrush x:Key="Brush.Text.Accent" Color="#B85C38" />
    <SolidColorBrush x:Key="Brush.Text.Inverted" Color="#1D1D1E" />
    <SolidColorBrush x:Key="Brush.Border.Light" Color="#E5E5E5" />
    <SolidColorBrush x:Key="Brush.Input.Background" Color="#FFFFFF" />

    <LinearGradientBrush x:Key="Brush.Gradient.Play" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0.0" Color="#FF7E5F" />
        <GradientStop Offset="1.0" Color="#FEB47B" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="Brush.Interact.Hover" Color="#10000000" />
    <SolidColorBrush x:Key="Brush.Interact.Pressed" Color="#20000000" />
    <SolidColorBrush x:Key="Brush.Interact.Selected" Color="#E0E0E0" />
</ResourceDictionary>