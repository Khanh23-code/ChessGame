<Window
    x:Class="ChessUI.Views.GameMenus.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Notification"
    Width="400"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="{DynamicResource Brush.Background.Main}"
        BorderBrush="{DynamicResource Brush.Gradient.Play}"
        BorderThickness="1"
        CornerRadius="10">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="txtTitle"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{DynamicResource Brush.Text.Secondary}"
                MouseDown="Window_MouseDown"
                Text="???????" />
            <TextBlock
                x:Name="txtMessage"
                Grid.Row="1"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{DynamicResource Brush.Text.Primary}"
                Text="???????"
                TextWrapping="Wrap" />

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnCancel"
                    Width="90"
                    Height="35"
                    Margin="0,0,10,0"
                    BorderThickness="1"
                    Click="BtnCancel_Click"
                    Content="Cancel"
                    Style="{DynamicResource GameMenuGrayButtonStyle}" />

                <Button
                    x:Name="btnOk"
                    Width="80"
                    Height="35"
                    Click="BtnOk_Click"
                    Content="OK"
                    FontWeight="Bold"
                    Foreground="White"
                    Style="{DynamicResource StartButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>