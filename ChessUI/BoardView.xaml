<UserControl
    x:Class="ChessUI.Views.BoardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="10"
            Background="#262522"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Ellipse
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Fill="#505050" />

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Garry Kasparov" />
                    <TextBlock
                        FontSize="14"
                        Foreground="#AAAAAA"
                        Text="400" />
                </StackPanel>

                <Border Grid.Column="2" Style="{StaticResource TimerBox}">
                    <TextBlock
                        x:Name="OpponentTimerText"
                        Style="{StaticResource TimerText}"
                        Text="00:10" />
                </Border>
            </Grid>
        </Border>

        <Viewbox Grid.Row="1">
            <Grid
                x:Name="BoardGrid"
                Width="600"
                Height="600"
                MouseDown="BoardGrid_MouseDown">

                <Grid.Background>
                    <ImageBrush ImageSource="../Assets/Board.png" />
                </Grid.Background>

                <UniformGrid
                    x:Name="HighLightGrid"
                    Columns="8"
                    Rows="8" />

                <UniformGrid
                    x:Name="PieceGrid"
                    Columns="8"
                    Rows="8" />

                <ContentControl x:Name="MenuContainer" />
            </Grid>
        </Viewbox>

        <Border
            Grid.Row="2"
            Margin="0,10,0,0"
            Padding="10"
            Background="#262522"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Ellipse
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Fill="#505050" />

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Magnus Carlsen" />
                    <TextBlock
                        FontSize="14"
                        Foreground="#AAAAAA"
                        Text="400" />
                </StackPanel>

                <Border Grid.Column="2" Style="{StaticResource TimerBox}">
                    <TextBlock
                        x:Name="PlayerTimerText"
                        Style="{StaticResource TimerText}"
                        Text="00:10" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>