<UserControl x:Class="ChessUI.GameOverMenu"
             Style="{StaticResource MenuAnimationStyle}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">

    <Border Width="350" Height="220" Style="{StaticResource MenuOuterBorderStyle}">
        <Border Style="{StaticResource MenuInnerBorderStyle}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtWinner" Grid.Row="0" Text="Winner text"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource PlayGradientBrush}"/>

                <TextBlock x:Name="txtReason" Grid.Row="1" Text="Endreason + Who win"
                           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"
                           FontSize="14" Foreground="#AAAAAA"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnExit" Click="btnExit_Click" Content="EXIT"
                            Width="100" Height="40" Margin="0,0,10,0"
                            Style="{StaticResource GameMenuGrayButtonStyle}" />

                    <Button x:Name="btnRestart" Click="btnRestart_Click" Content="RESTART"
                            Width="100" Height="40"
                            Style="{StaticResource RestartGradientButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>