<UserControl
    x:Class="ChessUI.Views.BoardMenu.PlayFlyoutMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        Width="300"
        Background="{DynamicResource Brush.Background.Tertiary}"
        BorderThickness="0,0,1,0"
        RenderOptions.BitmapScalingMode="HighQuality">
        <StackPanel Margin="15">

            <Grid Margin="5,5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="IconColumn" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Width="28"
                    Height="28"
                    Margin="0,0,10,0"
                    Source="/Assets/MenuAssets/board.png">
                    <Image.Effect>
                        <DropShadowEffect
                            BlurRadius="2"
                            Direction="0"
                            Opacity="1"
                            ShadowDepth="0"
                            Color="Black" />
                    </Image.Effect>
                </Image>
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource Brush.Text.Primary}"
                    Text="Play" />
            </Grid>

            <RadioButton
                x:Name="PlayComputerButton"
                Margin="0,10,0,0"
                Checked="PlayComputerButton_Checked"
                GroupName="PlaySubMenu"
                Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/play_computer.png">
                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="2"
                                Direction="0"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="Black" />
                        </Image.Effect>
                    </Image>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource Brush.Text.Primary}"
                            Text="Play With Computer" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource Brush.Text.Secondary}"
                            Text="Challenge a bot from Easy to Master"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </RadioButton>
            <RadioButton
                x:Name="TwoPlayersButton"
                Margin="0,10,0,0"
                Checked="TwoPlayersButton_Checked"
                GroupName="PlaySubMenu"
                Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/two_player.png">
                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="2"
                                Direction="0"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="Black" />
                        </Image.Effect>
                    </Image>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource Brush.Text.Primary}"
                            Text="Two Players" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource Brush.Text.Secondary}"
                            Text="Play with your friend"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <Image
                        Grid.Column="2"
                        Width="32"
                        Height="32"
                        Margin="15,0,0,0"
                        Source="/Assets/MenuAssets/two_player.png">
                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="2"
                                Direction="0"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="Black" />
                        </Image.Effect>
                    </Image>
                </Grid>
            </RadioButton>
        </StackPanel>
    </Border>
</UserControl>
