<UserControl
    x:Class="ChessUI.Views.BoardMenu.ChessMovesLesson"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI.Views.BoardMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="LessonRoot"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="150" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Ellipse
                    Grid.Column="0"
                    Width="30"
                    Height="30"
                    Margin="15,0,15,15"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Fill="White"
                    Stroke="White"
                    StrokeThickness="0.5" />
                <Ellipse
                    Grid.Column="1"
                    Width="30"
                    Height="30"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Fill="Black"
                    Stroke="White"
                    StrokeThickness="0.5" />
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="100"
                FontWeight="Bold"
                Foreground="White"
                Opacity="0.05"
                RenderTransformOrigin="0.5,0.5"
                Text="{Binding SelectedPiece.Name}">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="-10" />
                </TextBlock.RenderTransform>
            </TextBlock>

            <Image
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="{Binding SelectedPiece.ImagePath}">
                <Image.Effect>
                    <DropShadowEffect
                        BlurRadius="20"
                        Opacity="0.5"
                        ShadowDepth="10" />
                </Image.Effect>
            </Image>
        </Grid>

        <ItemsControl
            x:Name="PieceCarousel"
            Grid.Row="2"
            ClipToBounds="False"
            ItemsSource="{Binding Pieces}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:CarouselPanelLearning
                        RadiusX="120"
                        RadiusY="40"
                        RotationAngle="{Binding ElementName=LessonRoot, Path=CurrentRotation}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="60"
                        Height="80"
                        Background="Transparent"
                        Cursor="Hand"
                        MouseLeftButtonDown="Piece_MouseLeftButtonDown">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image
                            Grid.Row="0"
                            Source="{Binding IconPath}"
                            Stretch="Uniform" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="10"
                            Foreground="#AAAAAA"
                            Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="3" Margin="40,10,40,0">
            <TextBlock
                Margin="0,0,0,15"
                FontSize="22"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding SelectedPiece.Title}" />
            <TextBlock
                FontSize="14"
                Foreground="#CCCCCC"
                LineHeight="22"
                Text="{Binding SelectedPiece.Description}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
