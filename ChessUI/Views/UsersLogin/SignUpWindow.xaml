<Window
    x:Class="ChessUI.SignUpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sign Up"
    Width="400"
    Height="850"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetName="MainGrid"
                        Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="0:0:0.4" />

                    <DoubleAnimation
                        Storyboard.TargetName="MainGrid"
                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="250"
                        To="0"
                        Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <PowerEase EasingMode="EaseOut" Power="4" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid
        x:Name="MainGrid"
        Margin="20"
        RenderOptions.BitmapScalingMode="HighQuality">
        <Grid.RenderTransform>
            <TranslateTransform X="0" Y="0" />
        </Grid.RenderTransform>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,0"
            Background="#C0000000"
            CornerRadius="10"
            Style="{StaticResource BorderStyleLogin}" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,15,15,15"
            Background="Transparent"
            BorderBrush="#30FFFFFF"
            BorderThickness="1"
            CornerRadius="10">

            <StackPanel Margin="25" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="CREATE ACCOUNT"
                    TextDecorations="Underline" />
                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Full name:" />
                <TextBox
                    x:Name="FullNameTextBox"
                    GotFocus="Input_GotFocus"
                    KeyDown="FullNameTextBox_KeyDown" />
                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Email:" />
                <TextBox
                    x:Name="EmailTextBox"
                    GotFocus="Input_GotFocus"
                    KeyDown="EmailTextBox_KeyDown" />

                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Username:" />
                <TextBox
                    x:Name="UsernameTextBox"
                    GotFocus="Input_GotFocus"
                    KeyDown="UsernameTextBox_KeyDown" />


                <TextBlock
                    Height="25"
                    Margin="0,10,0,0"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Password:" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="PasswordShowBox"
                        Height="25"
                        Visibility="Collapsed" />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Height="25"
                        GotFocus="Input_GotFocus"
                        KeyDown="PasswordBox_KeyDown" />
                    <Button
                        x:Name="eye"
                        Grid.ColumnSpan="1"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="👁️"
                        Foreground="White"
                        PreviewMouseLeftButtonDown="EyeButton_Show"
                        PreviewMouseLeftButtonUp="EyeButton_Hide"
                        Style="{StaticResource EyeButton}" />
                </Grid>
                <TextBlock
                    Margin="0,10,0,0"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Confirm Password:" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="ConfirmPasswordShowBox"
                        Height="25"
                        Visibility="Collapsed" />
                    <PasswordBox
                        x:Name="ConfirmPasswordBox"
                        Height="25"
                        GotFocus="Input_GotFocus"
                        KeyDown="ConfirmPasswordBox_KeyDown" />
                    <Button
                        x:Name="eyeConfirm"
                        Grid.ColumnSpan="1"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="👁️"
                        Foreground="White"
                        PreviewMouseLeftButtonDown="EyeConfirmButton_Show"
                        PreviewMouseLeftButtonUp="EyeConfirmButton_Hide"
                        Style="{StaticResource EyeButton}" />
                </Grid>


                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Age:" />
                <ComboBox
                    x:Name="AgeComboBox"
                    Height="34"
                    IsEditable="True"
                    Text="5" />

                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Level:" />
                <ComboBox
                    x:Name="LevelComboBox"
                    IsEditable="False"
                    IsReadOnly="True"
                    Text="Beginner">

                    <ComboBoxItem Content="Beginner" />
                    <ComboBoxItem Content="Intermediate" />
                    <ComboBoxItem Content="Advanced" />
                    <ComboBoxItem Content="Professor" />
                </ComboBox>
                <TextBlock
                    x:Name="StatusTextBlock"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="Red"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
                <Button
                    x:Name="RegisterButton"
                    Height="40"
                    Margin="0,10"
                    Background="White"
                    Click="RegisterButton_Click"
                    Content="Register"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="#333333"
                    Style="{StaticResource ButtonBorderRadius}" />
                <Button
                    x:Name="CancelButton"
                    Height="40"
                    Margin="0,0"
                    Background="Transparent"
                    BorderBrush="White"
                    BorderThickness="1"
                    Click="CancelButton_Click"
                    Content="Cancel"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White"
                    IsCancel="True"
                    Style="{StaticResource ButtonBorderRadius}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>