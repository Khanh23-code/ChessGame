<Window
    x:Class="ChessUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ChessUI.Views"
    Title="ChessGame"
    Width="1000"
    Height="800"
    Background="#302E2C"
    Icon="/Assets/icon.ico"
    KeyDown="Window_KeyDown"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid RenderOptions.BitmapScalingMode="HighQuality">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <views:NavigationView Grid.Column="0" />

        <views:BoardView x:Name="BoardViewControl" Grid.Column="1" />

        <views:InfoView Grid.Column="2" />

    </Grid>
</Window>
