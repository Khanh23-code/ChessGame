<UserControl
    x:Class="ChessUI.Views.BoardMenu.TwoPlayerSetup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="0,20,20,20"
    d:DesignHeight="600"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="10"
            Background="{StaticResource FrostedGlassBrush}"
            CornerRadius="8">
            <StackPanel VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Grid.Column="0"
                            Width="32"
                            Height="32"
                            Margin="30,0,15,0"
                            Source="/Assets/MenuAssets/two_player.png" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Two Players" />
                        </StackPanel>
                        <Image
                            Grid.Column="2"
                            Width="32"
                            Height="32"
                            Margin="15,0,30,0"
                            Source="/Assets/MenuAssets/two_player.png" />
                    </Grid>
                </Grid>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Padding="10"
            Background="{StaticResource FrostedGlassBrush}"
            CornerRadius="8">
            <StackPanel Margin="0,10,0,0">

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="White"
                    Text="Người Chơi Trắng (Đi trước):" />
                <TextBox Margin="0,0,0,15" Text="Player 1" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="White"
                    Text="Người Chơi Đen (Đi sau):" />
                <TextBox Margin="0,0,0,30" Text="Player 2" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="White"
                    Text="Chọn Thời gian (Time Control):" />

                <ComboBox
                    x:Name="TimeComboBox"
                    Margin="0,0,0,30"
                    SelectedIndex="0">
                    <ComboBoxItem Content="No set Timer" />
                    <ComboBoxItem Content="1 phút" />
                    <ComboBoxItem Content="3 phút" />
                    <ComboBoxItem Content="10 phút" />
                    <ComboBoxItem Content="30 phút" />
                </ComboBox>
                <Button
                    x:Name="StartTwoPlayerButton"
                    Padding="15,8"
                    Content="BẮT ĐẦU TRẬN ĐẤU"
                    FontSize="16"
                    Style="{StaticResource RegisterButton}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>