<Window
    x:Class="ChessUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ChessUI.Views.BoardMenu"
    Title="ChessGame"
    Width="1150"
    Height="800"
    Icon="/Assets/icon.ico"
    KeyDown="Window_KeyDown"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    StateChanged="Window_StateChanged"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            NonClientFrameEdges="None"
            ResizeBorderThickness="{Binding ResizeBorderThickness}" />
    </WindowChrome.WindowChrome>

    <Grid RenderOptions.BitmapScalingMode="HighQuality">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            Panel.ZIndex="1"
            Orientation="Horizontal">
            <Button
                x:Name="btnMinimize"
                Click="btnMinimize_Click"
                Content="&#xE921;"
                Style="{StaticResource TitleBarButton}" />
            <Button
                x:Name="btnMaximize"
                Click="btnMaximize_Click"
                Content="&#xE922;"
                Style="{StaticResource TitleBarButton}" />
            <Button
                x:Name="btnClose"
                Click="btnClose_Click"
                Content="&#xE8BB;"
                Style="{StaticResource TitleBarButtonClose}" />
        </StackPanel>
        <Image
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            Source="/Assets/MenuAssets/BackgroundMenu1.jpeg"
            Stretch="UniformToFill" />


        <views:NavigationView
            x:Name="NavigationViewControl"
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0" />

        <views:BoardView
            x:Name="BoardViewControl"
            Grid.Row="1"
            Grid.Column="1" />
        <Grid Grid.Row="1" Grid.Column="2">

            <ContentControl
                x:Name="RightPanelContentHost"
                Grid.Row="1"
                Grid.Column="2" />
        </Grid>
    </Grid>
</Window>
