<UserControl
    x:Class="ChessUI.Views.BoardMenu.SettingsFlyoutMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI.Views.BoardMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        Width="300"
        Background="#2C2B29"
        BorderBrush="#404040"
        BorderThickness="0,0,1,0"
        RenderOptions.BitmapScalingMode="HighQuality">
        <StackPanel Margin="15">

            <Grid Margin="5,5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="IconColumn" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Width="28"
                    Height="28"
                    Margin="0,0,10,0"
                    Source="/Assets/MenuAssets/setting.png" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Settings" />
            </Grid>

            <RadioButton GroupName="SettingsSubMenu" Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/board_and_pieces.png" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Board and Pieces Chess" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#AAAAAA"
                            Text="Custom your board and pieces chess as you want"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </RadioButton>

            <RadioButton
                Margin="0,10,0,0"
                HorizontalContentAlignment="Stretch"
                GroupName="SettingsSubMenu"
                Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/appearance.png" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Appearance" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#AAAAAA"
                            Text="Change your mode if you want light mode"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <CheckBox
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsChecked="{Binding IsDarkMode}"
                        Style="{StaticResource ImageThemeToggleStyle}" />
                </Grid>
            </RadioButton>
            <RadioButton
                Margin="0,10,0,0"
                GroupName="SettingsSubMenu"
                Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/logout.png" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Log out" />
                    </StackPanel>
                </Grid>
            </RadioButton>
        </StackPanel>
    </Border>
</UserControl>
