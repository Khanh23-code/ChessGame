<UserControl
    x:Class="ChessUI.PromotionMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="400"
    Style="{StaticResource MenuAnimationStyle}"
    mc:Ignorable="d">

    <Border
        Width="350"
        Height="140"
        Style="{StaticResource MenuOuterBorderStyle}">
        <Border Style="{StaticResource MenuInnerBorderStyle}">
            <Grid RenderOptions.BitmapScalingMode="HighQuality">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource Brush.Text.Primary}"
                    Text="SELECT A PIECE" />

                <UniformGrid
                    Grid.Row="1"
                    Margin="10,0"
                    Columns="4"
                    Rows="1">
                    <Image
                        x:Name="imgQueen"
                        Margin="5"
                        MouseDown="imgQueen_MouseDown"
                        Style="{StaticResource PromotionPieceStyle}" />
                    <Image
                        x:Name="imgRook"
                        Margin="5"
                        MouseDown="imgRook_MouseDown"
                        Style="{StaticResource PromotionPieceStyle}" />
                    <Image
                        x:Name="imgKnight"
                        Margin="5"
                        MouseDown="imgKnight_MouseDown"
                        Style="{StaticResource PromotionPieceStyle}" />
                    <Image
                        x:Name="imgBishop"
                        Margin="5"
                        MouseDown="imgBishop_MouseDown"
                        Style="{StaticResource PromotionPieceStyle}" />
                </UniformGrid>
            </Grid>
        </Border>
    </Border>
</UserControl>