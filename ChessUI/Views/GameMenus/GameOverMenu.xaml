<UserControl
    x:Class="ChessUI.GameOverMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Width="275"
        Height="125"
        Style="{StaticResource BorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="txtWinner"
                Grid.ColumnSpan="2"
                FontSize="28"
                Style="{StaticResource TextStyle}"
                Text="Winner text" />

            <TextBlock
                x:Name="txtReason"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                FontSize="16"
                Style="{StaticResource TextStyle}"
                Text="Endreason + Who win" />

            <Button
                x:Name="btnRestart"
                Grid.Row="2"
                Grid.Column="0"
                Width="80"
                Height="30"
                Click="btnRestart_Click"
                Content="RESTART"
                Style="{StaticResource ButtonStyle}" />

            <Button
                x:Name="btnExit"
                Grid.Row="2"
                Grid.Column="1"
                Width="80"
                Height="30"
                Click="btnExit_Click"
                Content="EXIT"
                Style="{StaticResource ButtonStyle}" />
        </Grid>
    </Border>
</UserControl>
