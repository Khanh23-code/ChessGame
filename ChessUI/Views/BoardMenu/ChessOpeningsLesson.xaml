<UserControl
    x:Class="ChessUI.Views.BoardMenu.ChessOpeningsLesson"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="OpeningsRoot"
    d:DesignHeight="650"
    d:DesignWidth="1100"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentGreen" Color="#00DC82" />
        <SolidColorBrush x:Key="DarkOverlay" Color="#CC000000" />

        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Maximum" Value="100" />
            <Setter Property="Minimum" Value="0" />
            <Setter Property="Value" Value="0" />
            <Setter Property="IsMoveToPointEnabled" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid
                            Height="30"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border
                                x:Name="TrackBackground"
                                Grid.Row="1"
                                Height="4"
                                Margin="0"
                                VerticalAlignment="Center"
                                Background="#40FFFFFF"
                                CornerRadius="2" />

                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border
                                                    Height="4"
                                                    VerticalAlignment="Center"
                                                    Background="{StaticResource AccentGreen}"
                                                    CornerRadius="2" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb
                                        x:Name="Thumb"
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        OverridesDefaultStyle="True">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border
                                                    Background="White"
                                                    BorderThickness="0"
                                                    CornerRadius="8">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="6"
                                                            Opacity="0.4"
                                                            ShadowDepth="0"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VideoItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="0,0,5,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="8"
                            SnapsToDevicePixels="True">
                            <Grid>
                                <Border
                                    x:Name="Indicator"
                                    Width="3"
                                    Margin="0,4"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource AccentGreen}"
                                    CornerRadius="2"
                                    Visibility="Collapsed" />
                                <ContentPresenter Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#15FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2500DC82" />
                                <Setter TargetName="Indicator" Property="Visibility" Value="Visible" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border ClipToBounds="True" CornerRadius="0">
        <Grid>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0.0" Color="#0F171E" />
                        <GradientStop Offset="0.6" Color="#142829" />
                        <GradientStop Offset="1.0" Color="#0F171E" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Grid Margin="40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource AccentGreen}"
                        Text="CHESS OPENINGS" />

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock
                            x:Name="txtMainTitle"
                            FontFamily="Georgia"
                            FontSize="42"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Select a Lesson"
                            TextTrimming="CharacterEllipsis" />

                        <Border
                            Width="315"
                            Height="4"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Left"
                            Background="{StaticResource AccentGreen}"
                            CornerRadius="2" />
                    </StackPanel>

                    <Border
                        Height="400"
                        Background="Black"
                        ClipToBounds="True"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="30"
                                Opacity="0.6"
                                ShadowDepth="10"
                                Color="Black" />
                        </Border.Effect>

                        <Grid Background="Transparent" Cursor="Hand">
                            <MediaElement
                                x:Name="MainPlayer"
                                LoadedBehavior="Manual"
                                MediaEnded="MainPlayer_MediaEnded"
                                MediaOpened="MainPlayer_MediaOpened"
                                MouseDown="TogglePlay_Click"
                                ScrubbingEnabled="True"
                                Stretch="Uniform" />

                            <Button
                                x:Name="BtnBigPlay"
                                Width="90"
                                Height="90"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Click="TogglePlay_Click"
                                Cursor="Hand"
                                Opacity="0.9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse
                                                x:Name="Circle"
                                                Width="90"
                                                Height="90"
                                                Fill="#99000000"
                                                Stroke="White"
                                                StrokeThickness="2" />

                                            <Path
                                                Margin="0,0,0,-2"
                                                Data="M 38,28 L 62,45 L 38,62 Z"
                                                Fill="White" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Circle" Property="Stroke" Value="{StaticResource AccentGreen}" />
                                                <Setter TargetName="Circle" Property="Fill" Value="#BB000000" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Border
                                Height="50"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource DarkOverlay}">
                                <Grid Margin="15,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Button
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="TogglePlay_Click"
                                        Cursor="Hand">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe Fluent Icons"
                                            FontSize="16"
                                            Foreground="White"
                                            Text="&#xE768;" />
                                    </Button>

                                    <TextBlock
                                        x:Name="lblCurrentTime"
                                        Grid.Column="1"
                                        Margin="0,0,15,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="00:00" />

                                    <Slider
                                        x:Name="progressSlider"
                                        Grid.Column="2"
                                        Margin="0,15,0,0"
                                        VerticalAlignment="Center"
                                        IsMoveToPointEnabled="True"
                                        Style="{StaticResource ModernSliderStyle}"
                                        Thumb.DragCompleted="progressSlider_DragCompleted"
                                        Thumb.DragStarted="progressSlider_DragStarted"
                                        ValueChanged="progressSlider_ValueChanged" />

                                    <TextBlock
                                        x:Name="lblTotalTime"
                                        Grid.Column="3"
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#AAAAAA"
                                        Text="00:00" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <Border
                        Margin="0,20,0,0"
                        Padding="15"
                        Background="#10FFFFFF"
                        CornerRadius="8">
                        <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                            <TextBlock
                                x:Name="txtDescription"
                                FontSize="15"
                                Foreground="#CCCCCC"
                                LineHeight="24"
                                Text="Please select a video from the list to start learning."
                                TextWrapping="Wrap" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10,0,15"
                        FontFamily="Georgia"
                        FontSize="22"
                        Foreground="White"
                        Text="Search Lessons" />

                    <Border
                        Grid.Row="1"
                        Height="44"
                        Margin="0,0,5,20"
                        Background="#15FFFFFF"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        CornerRadius="22">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="15,2,10,0"
                                VerticalAlignment="Center"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="16"
                                Foreground="#AAAAAA"
                                Text="&#xE721;" />

                            <TextBox
                                Grid.Column="1"
                                Margin="0,3,0,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="{StaticResource AccentGreen}"
                                FontSize="14"
                                Foreground="White"
                                Tag="Search lessons..."
                                TextChanged="txtSearch_TextChanged" />
                        </Grid>
                    </Border>

                    <ListBox
                        x:Name="VideoList"
                        Grid.Row="2"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemContainerStyle="{StaticResource VideoItemContainerStyle}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionChanged="VideoList_SelectionChanged">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="70">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Background="#252525"
                                        ClipToBounds="True"
                                        CornerRadius="6">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe Fluent Icons"
                                                FontSize="24"
                                                Foreground="#444"
                                                Text="&#xE768;" />

                                            <Image
                                                Opacity="0.9"
                                                Source="{Binding ThumbnailPath}"
                                                Stretch="UniformToFill" />

                                            <Border
                                                Margin="4"
                                                Padding="6,2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="#CC000000"
                                                CornerRadius="4">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource AccentGreen}"
                                                    Text="{Binding Duration}" />
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="12,4,0,4"
                                        VerticalAlignment="Top">
                                        <TextBlock
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{Binding Title}"
                                            TextTrimming="CharacterEllipsis" />
                                        <TextBlock
                                            MaxHeight="36"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#999"
                                            Text="{Binding Description}"
                                            TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>