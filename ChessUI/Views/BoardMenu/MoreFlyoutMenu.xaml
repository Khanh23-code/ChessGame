<UserControl
    x:Class="ChessUI.Views.BoardMenu.MoreFlyoutMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI.Views.BoardMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        Width="300"
        Background="#2C2B29"
        BorderBrush="#404040"
        BorderThickness="0,0,1,0"
        RenderOptions.BitmapScalingMode="HighQuality">
        <StackPanel Margin="15">
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Background="#666563"
                FontFamily="Segoe UI"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Text="Features" />
            <RadioButton
                Margin="0,5,0,0"
                GroupName="MoreSubMenu"
                Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/library.png" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Libarry" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#AAAAAA"
                            Text="Save games in a collections for further study"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </RadioButton>
            <TextBlock
                Grid.Column="1"
                Margin="0,0"
                VerticalAlignment="Center"
                Background="#666563"
                FontFamily="Segoe UI"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Text="Resources" />
            <RadioButton
                Margin="0,5,0,0"
                GroupName="MoreSubMenu"
                Style="{StaticResource FlyoutButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,15,0"
                        Source="/Assets/MenuAssets/rule.png" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Rules" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#AAAAAA"
                            Text="Learn the rules of chess"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </RadioButton>
        </StackPanel>
    </Border>
</UserControl>
