<Window
    x:Class="ChessUI.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChessUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="760"
    Height="480"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    StateChanged="Window_StateChanged"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Grid RenderOptions.BitmapScalingMode="HighQuality">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="485*" />
            <ColumnDefinition Width="285*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            Panel.ZIndex="1"
            Orientation="Horizontal">
            <Button
                x:Name="btnMinimize"
                Click="btnMinimize_Click"
                Content="&#xE921;"
                Style="{StaticResource TitleBarButton}" />
            <Button
                x:Name="btnMaximize"
                Click="btnMaximize_Click"
                Content="&#xE922;"
                Style="{StaticResource TitleBarButton}" />
            <Button
                x:Name="btnClose"
                Click="btnClose_Click"
                Content="&#xE8BB;"
                Style="{StaticResource TitleBarButtonClose}" />
        </StackPanel>
        <Image
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Source="/Assets/LoginAssets/BackgroundMenu.jpeg"
            Stretch="UniformToFill" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,10,10"
            Background="#A0000000"
            CornerRadius="10"
            Style="{StaticResource BorderStyleLogin}" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,15,15,15"
            Background="Transparent"
            BorderBrush="#30FFFFFF"
            BorderThickness="1"
            CornerRadius="10">

            <StackPanel Margin="25" VerticalAlignment="Center">

                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="SIGN IN" />

                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Username" />
                <TextBox x:Name="UsernameTextBox" Height="25" />

                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="Password" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="PasswordShowBox"
                        Height="25"
                        Visibility="Collapsed" />
                    <PasswordBox x:Name="PasswordBox" Height="25" />
                    <Button
                        x:Name="eye"
                        Grid.ColumnSpan="1"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="EyeButton_Click"
                        Content="👁️"
                        Foreground="White"
                        Style="{StaticResource EyeButton}" />
                </Grid>


                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        x:Name="RememberMeCheckBox"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Remember me"
                        Foreground="White" />

                    <Button
                        x:Name="ForgotPasswordButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ForgotPasswordButton_Click"
                        Content="Forgot Login?"
                        Cursor="Hand"
                        Foreground="White" />
                </Grid>

                <Button
                    x:Name="LoginButton"
                    Height="40"
                    Margin="0,0,0,15"
                    Background="White"
                    BorderThickness="0"
                    Click="LoginButton_Click"
                    Content="Login"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="#333333"
                    Style="{StaticResource ButtonBorderRadius}" />

                <Button
                    x:Name="GoogleLoginButton"
                    Height="40"
                    Margin="0,0,0,30"
                    Background="Transparent"
                    BorderBrush="White"
                    BorderThickness="1"
                    Click="GoogleLoginButton_Click"
                    Foreground="White"
                    Style="{StaticResource ButtonBorderRadius}">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="21"
                            Height="21"
                            Margin="0,0,15,0"
                            Source="/Assets/LoginAssets/GoogleIcon.png" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Login with Google" />
                    </StackPanel>
                </Button>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Don't have an accounts? " />
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink Click="SignUp_Click" Foreground="White">
                            Sign up
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>